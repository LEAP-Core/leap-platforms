service SCRATCHPAD_MEMORY
{
    server sw (cpp, method) <- hw (bsv, method)
    {
        method Load (in UINT32[32] addr, out UINT32[32] val);
        method Store(in UINT32[32] addr, in  UINT32[32] val);
    };

    server hw (bsv, method) <- sw (cpp, method)
    {
        method Invalidate(in UINT32[32] addr);
    };
};
